@page "/course-register"

<EditForm Model="@course" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />

    <div class="container d-flex justify-content-center align-items-center mt-5">
        <div class="row w-100">
            <div class="mx-auto shadow p-4 rounded bg-white"> @* mx-auto adds equal margin-left and margin-right *@
                <h1 class="text-center mb-4">Course Registration Form</h1>

                <div class="mb-3">
                    <label class="form-label">Full Name *</label>
                    <input type="text" class="form-control" @bind="course.Name" />
                    <ValidationMessage For="@(() => course.Name)" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Email *</label>
                    <input type="email" class="form-control" @bind="course.Email"  />
                    <ValidationMessage For="@(() => course.Email)" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Phone Number *</label>
                    <input type="text" class="form-control" @bind="course.PhoneNumber"/>
                    <ValidationMessage For="@(() => course.PhoneNumber)" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Select Course *</label>
                    <select class="form-control" @bind="course.SelectedCourse">
                        <option value="">Choose...</option>
                        <option value="Web">Web Design</option>
                        <option value="AI">Artificial Intelligence</option>
                        <option value="Security">Cyber Security</option>
                    </select>
                    <ValidationMessage For="@(() => course.SelectedCourse)" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Study Mode *</label>
                    <div>
                        <div class="form-check form-check-inline">
                            <input id="online"
                                   class="form-check-input" 
                                   type="radio" 
                                   name="studyMode" 
                                   value="true" 
                                   checked ="@course.StudyMode.Equals(true)" />
                            <label for="online" class="form-check-label">Online</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input id="offline"
                                   class="form-check-input"
                                   type="radio"
                                   name="studyMode"
                                   value="false"
                                   checked="@course.StudyMode.Equals(false)" />
                            <label for="offline" class="form-check-label">Offline</label>

                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Preferred Start Date *</label>
                    <input type="date" class="form-control" @bind="course.StartDate" />
                    <ValidationMessage For="@(() => course.StartDate)" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Comments or Notes</label>
                    <textarea class="form-control" @bind="course.Comment" placeholder="Optional notes..."></textarea>
                </div>
                <div class="mb-3 d-flex align-items-center">
                    <input type="checkbox" class="form-check-input me-3" id="terms" @bind="course.AcceptedTerms" />
                    <label class="form-check-label me-2 mb-0" for="terms">
                        I agree to the terms and conditions <span class="text-danger">*</span>
                    </label>
                    <span class="text-danger small">
                        <ValidationMessage For="@(() => course.AcceptedTerms)" />
                    </span>
                </div>
                <div class="mb-3 text-center">
                    <button class="btn btn-success w-100" type="submit">Register</button>
                </div>
            </div>
        </div>
    </div>
</EditForm>

@code {
    private CourseVM course = new CourseVM();
    private void HandleValidSubmit()
    {
        Console.WriteLine("Form has been sent!");
    }
}
